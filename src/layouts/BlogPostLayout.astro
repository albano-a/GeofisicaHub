---
import "../style/geofisico.css";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import HeadInformation from "../components/HeadInformation.astro";

const { pageTitle, pageUrl, pageDescription } = Astro.props;
const brand_logo = "/geofisicablog-logo.svg";
---

<html lang="en" data-theme="dark">
  <head>
    <HeadInformation
      pageTitle={pageTitle}
      pageDescription={pageDescription}
      pageUrl={pageUrl}
    />

    <title>{pageTitle} - GeofisicaBlog</title>

    <script
      is:inline
      src="https://kit.fontawesome.com/61000256a0.js"
      crossorigin="anonymous"></script>
  </head>
  <body>
    <Header logoSrc={brand_logo} />

    <section class="section">
      <div class="container">
        <div class="content">
          <h1
            class="has-text-text-light is-size-1 has-text-centered has-text-weight-black"
          >
            {pageTitle}
          </h1>
          <hr />
        </div>
        <div class="content">
          <slot />
        </div>
      </div>
    </section>

    <Footer />
  </body>
</html>
