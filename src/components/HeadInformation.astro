---
const { pageTitle, pageUrl, pageDescription } = Astro.props;
---

<meta charset="utf-8" />
<meta
  name="viewport"
  content="width=device-width, initial-scale=1.0, shrink-to-fit=no"
/>
<link rel="canonical" href={pageUrl} />
<meta property="og:url" content={pageUrl} />
<meta property="og:image" content="logotipo_final.svg" />
<meta name="twitter:description" content={pageDescription} />
<meta name="twitter:image" content="/images/plataforma-petroleo.jpg" />
<meta name="twitter:card" content="summary_large_image" />
<meta property="og:type" content="website" />
<meta name="twitter:title" content=`${pageTitle} - Tudo sobre Geofísica` />
<meta name="description" content={pageDescription} />
<script type="application/ld+json">
  {
    "@context": "http://schema.org",
    "@type": "WebSite",
    "name": "GeofísicaHub",
    "url": "https://geofisicahub.live/"
  }
</script>
<link rel="icon" type="image/svg+xml" sizes="124x126" href="/Geo.svg" />
<link rel="stylesheet" href="https://s.pageclip.co/v1/pageclip.css" />

